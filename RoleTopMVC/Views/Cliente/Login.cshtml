<section id="conta">
    <div class="perfil">
        <img src="../img/profile.png" height="80px" width="80px">
        </div>

<main>
    <h1>Login</h1>
    <form method="POST" action='@Url.Action("Login", "Cliente")'>
            
                <div>
                    <label for="email">E-mail</label>
                    <br />
                    <input id="email" type="email" name="email" />
                </div>
    
                <div>
                    <label for="senha">Senha</label>
                    <br />
                    <input id="senha" type="password" name="senha" />
                </div>
    
                <input type="submit" value="Entrar"/>

                <div id="link-cadastro">
                <a href='@Url.Action("Index", "Cadastro")'>Quero me cadastrar!</a>
                </div>
            </form>
            
</main>
</section>